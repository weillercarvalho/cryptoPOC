<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>
  <br>
  <div>
    <%= form.label :acronym, style: "display: block" %>
    <%= form.text_field :acronym %>
  </div>
  <br>
  <div>
    <%= form.label :url_image, style: "display: block" %>
    <%= form.text_field :url_image %>
    <%= coin.url_image.present? ? image_tag(coin.url_image, size: "25x25", style: "margin: 0px 0px 0px 10px") : "" %>
  </div>
  <br>
  <div>
    <%= form.label :mining_type_id, style: "display:block" %>
    <%= form.select("mining_type_id", @mining_type_options) %>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
  
<% end %>
